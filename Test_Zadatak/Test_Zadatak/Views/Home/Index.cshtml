@model Test_Zadatak.Models.Radnik

@using (Html.BeginForm("Insert", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Podaci</th>
        </tr>
        <tr>
            <td>Ime: </td>
            <td>
                @Html.TextBoxFor(m => m.Ime)
            </td>
        </tr>
        <tr>
            <td>Prezime: </td>
            <td>
                @Html.TextBoxFor(m => m.Prezime)
            </td>
        </tr>
        <tr>
            <td>Adresa: </td>
            <td>
                @Html.TextBoxFor(m => m.Adresa)
            </td>
        </tr>
        <tr>
            <td>Neto Plata: </td>
            <td>
                @Html.TextBoxFor(m => m.NetoPlata, new { type = "number", min = "0"})
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}